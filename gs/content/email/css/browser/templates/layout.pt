<tal:block>
/* GroupServer Page Layout */

#toparea {
    background: #eeeeee;
    height: 5.250em; /*4.5u - thick*/
    border-bottom: 0.375em solid #cccccc;
}
#toparea a {
    text-decoration: none;
}
#gs-content-layout-body {
    position: relative;
    background: white;
    width: 100%;
    height: auto;
}

#toparea, #titlebar, #bodyblock {
    position: relative; /* Create a new positioning context */
}
/* Center the three main elements */
#titlebar, #bodyblock, #gs-content-layout-footer-content {
    text-align: left;
}

#titlebar-home-link {
    display: block;
    border: none;
    padding-top: 1.25em; /* 1u */
    text-decoration: none;
}
#titlebar .logo {
    display: none;
}
#titlebar .site {
    font: bold 250%/1 "Helvetica Neue", Helvetica, Arial, sans-serif; /* 2u */
    margin-left: 0.25em; /* 0.5u */
}

#gs-content-layout-body {
    padding: 0 0 1.25em 0;
}

#bodyblock {
    background: white;
}

#bodyblock, #gs-content-layout-footer {
    padding: 0 0.625em; /* 0 0.5u 0 0.5u  */
}

/* The Footer */
#gs-content-layout-footer {
    background: #eeeeee;
    height: 5.250em; /*4.5u - thick*/
    border-top: 0.375em solid #cccccc;
    position: relative;
    clear: both;
    margin: 0;
}
#gs-content-layout-footer-content {
    position: relative;
}
#gs-content-layout-footer-links {
    position: absolute;
    top: 0;
    left: 0;
}
#gs-content-layout-footer-ad {
    position: absolute;
    top: 0;
    right: 0;
}
</tal:block>