<tal:block xmlns:tal="http://xml.zope.org/namespaces/tal">
/* GroupServer Page Layout */
body {
    /* For the phones */
    -webkit-text-size-adjust: 100%;
    -ms-text-size-adjust: 100%;
}
td {
    padding: 0;
    margin: 0;
}
#gs-content-email-layout {
    padding: 0 0 0 0;
    margin: 0 0 0 0;
    border: none;
    border-collapse: collapse;
}
#gs-content-email-layout-preheader {
    /* https://www.campaignmonitor.com/blog/post/3628/a-practical-guide-to-email-preheaders/ */
    display: none;
    /* For IBM Notes. No, really. */
    color: #ffffff;
    background: #ffffff;
    font-size: 1px;
}
#gs-content-email-layout-body {
    table-layout: fixed; /* Bug-fix for Yahoo! Mail */
    border-collapse: separate;

}
#gs-content-email-layout-body, #gs-content-email-layout-body table {
    padding: 0 0 0 0; /*--=mpj17=-- Deliberately putting all 4 sides */
    margin: 0 0 0 0;
}
#toparea {
    background: #eeeeee;
    height: 24px; /*4.5u - thick*/
    border-bottom: 6px solid #cccccc; /* 0.375em = thick */
}
#toparea a {
    text-decoration: none;
}
#gs-content-layout-body {
    position: relative;
    background: white;
    width: 100%;
    height: auto;
}

#toparea, #titlebar, #bodyblock {
    position: relative; /* Create a new positioning context */
}
/* Center the three main elements */
#titlebar, #bodyblock, #gs-content-layout-footer-content {
    text-align: left;
}

#titlebar-home-link {
    display: block;
    line-height: 20px; /* 1u */
    max-width: 600px;
    border: none;
    white-space: nowrap;
    text-decoration: none;
}

#titlebar .logo {
    display: none;
}
#titlebar .site {
    font-size: 20px; /* 1u */
    line-height: 20px; /* 1 */
    font-weight: bold;
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
}

#gs-content-layout-body {
    padding: 0 0 20px 0; /* 1u = 1.25em */
}

#bodyblock {
    background: white;
    padding: 20px 10px 20px 10px; /* 1u 0.5u */
}

#gs-content-email-layout-prebody, #gs-content-layout-footer {
    padding: 0 10px 0 10px; /* 0 0.625em = 0.5u  */
}

/* The Footer */
#gs-content-layout-footer {
    background: #eeeeee;
    height: 24px; /* 5.250em = 4.5u - thick*/
    border-top: 6px solid #cccccc;  /* 0.375em */
    position: relative;
    clear: both;
    margin: 0 0 0 0;
    padding: 0 0 0 0;
}
#gs-content-layout-footer-content {
    position: relative;
    margin: 0 0 0 0;
    padding: 0 0 0 10px;
}
#gs-content-layout-footer-links {
    position: absolute;
    top: 0;
    left: 0;
}
#gs-content-layout-footer-ad {
    position: absolute;
    top: 0;
    right: 0;
}
#gs-content-layout-footer ul {
    margin: 0;
}
</tal:block>
